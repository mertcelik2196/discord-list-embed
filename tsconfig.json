{
  "compilerOptions": {
    "target": "es6",                         
    "module": "commonjs",                    
    "declaration": true,                  
    "outDir": "./dist",                       
    "rootDir": "./lib",                     
    "strict": true,                           
    "esModuleInterop": true,               
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,  
    "resolveJsonModule": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dev",
    "test"
  ]
}